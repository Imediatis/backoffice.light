{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}
<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-offset-2 col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><i class="fa fa-user m-r-sm"></i>{{LexiqueGetString('create-new-user')}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" action="{{path_for('user.pcreate')}}" method="post" autocomplete="off" name="new_user" id="new_user" enctype="multipart/form-data">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="usr_id" id="usr_id" value="{{Model.id}}">

                    <div class="form-group">
                        {{flashMsg()}}
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="profile_usr" class="col-lg-12 m-b-10">{{LexiqueGetString('profile')}}</label>
                            <div class="col-lg-12">
                                <select name="profile_usr" id="profile_usr" class="form-control b-r-sm">
                                    <option value>{{LexiqueGetString('select-')}}</option>
                                    {{profiles|raw}}

                                </select>
                                <span class="help-block m-b-none text-danger">{{modelErrors.profile_usr}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="login_usr">{{LexiqueGetString('email')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="login_usr" name="login_usr" class="form-control b-r-sm" type="email" placeholder="{{LexiqueGetString('email')}}*" value="{{Model.login}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.login_usr}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="fname_usr">{{LexiqueGetString('first-name')}}</label>
                            <div class="col-lg-12">
                                <input id="fname_usr" name="fname_usr" class="form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('first-name')}}" value="{{Model.fname}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.fname_usr}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="lname_usr">{{LexiqueGetString('last-name')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="lname_usr" name="lname_usr" class="form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('last-name')}}*" value="{{Model.lname}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.lname_usr}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label class="col-lg-12 mb-10" for="function_usr">{{LexiqueGetString('function')}}</label>
                            <div class="col-lg-12">
                                <input id="function_usr" name="function_usr" class="form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('function')}}" value="{{Model.function}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.function_usr}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <hr class="hr-line-dashed">
                        </div>
                        <div class="col-lg-12"><label class="text-right m-l-lg"><code>*</code> <small>{{LexiqueGetString('required-fields')}}</small></label></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-12 mb-20">
                            {{goBack('user.read')}}
                        </div>
                        <div class="col-lg-6 col-lg-12">
                            <button type="submit" id="sendComplaint" class="btn btn-md btn-primary g-bg-primary-opacity-0_8--hover g-mr-10 pull-right">
                                {{LexiqueGetString('save')}}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock content %} {% block scripts %}
<script></script>
{% endblock scripts %}