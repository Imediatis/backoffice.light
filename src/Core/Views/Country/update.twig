{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}
<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-offset-2 col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><i class="fa fa-user m-r-sm"></i>{{LexiqueGetString('new-country')}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" action="{{path_for('country.pupdate')}}" method="post" name="update_country" id="update_country" enctype="multipart/form-data">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="tb_coun_id" id="tb_coun_id" value="{{Model.id}}">
                    <div class="form-group">
                        {{flashMsg()}}
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_code_alpha_2" class="col-lg-12 m-b-10">{{LexiqueGetString('iso-code-2')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_code_alpha_2" name="tb_code_alpha_2" class="form-control b-r-sm" type="text" maxlength="2" minlength="2" placeholder="{{LexiqueGetString('iso-code-2')}}*" value="{{Model.alpha2}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_code_alpha_2}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="tb_code_alpha_3">{{LexiqueGetString('iso-code-3')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_code_alpha_3" name="tb_code_alpha_3" class="form-control b-r-sm" type="text" maxlength="3" placeholder="{{LexiqueGetString('iso-code-3')}}*" value="{{Model.alpha3}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_code_alpha_3}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_coun_en_name">{{LexiqueGetString('name')}} (en)<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_coun_en_name" name="tb_coun_en_name" class="form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('last-name')}}*" value="{{Model.enName}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_coun_en_name}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_coun_fr_name">{{LexiqueGetString('name')}} (fr)<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_coun_fr_name" name="tb_coun_fr_name" class="form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('last-name')}}*" value="{{Model.frName}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_coun_fr_name}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <hr class="hr-line-dashed">
                        </div>
                        <div class="col-lg-12"><label class="text-right m-l-lg"><code>*</code> <small>{{LexiqueGetString('required-fields')}}</small></label></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-12 mb-20">
                            {{goBack('country.read')}}
                        </div>
                        <div class="col-lg-6 col-lg-12">
                            <button type="submit" id="sendComplaint" class="btn btn-md btn-primary g-bg-primary-opacity-0_8--hover g-mr-10 pull-right">
                                {{LexiqueGetString('save')}}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock content %} {% block scripts %}
<script src="{{ base_url() }}/js/plugins/validate/jquery.validate.min.js"></script>
<script>
    $(document).ready(function() {

        $('#new_country').validate({
            rules: {
                tb_code_alpha_2: {
                    required: true,
                    maxlength: 2,
                    minlength: 2
                },
                tb_code_alpha_3: {
                    required: true,
                    maxlength: 3
                },
                tb_coun_en_name: {
                    required: true
                },
                tb_coun_fr_name: {
                    required: true
                }
            },
            messages: {
                tb_code_alpha_2: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    minlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-at-leas')}}"),
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_code_alpha_3: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_coun_en_name: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                },
                tb_coun_fr_name: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                }
            }

        })
    });
</script>
{% endblock scripts %}