{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}
<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-offset-2 col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><i class="fa fa-user m-r-sm"></i>{{LexiqueGetString('new-branch')}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" action="{{path_for('branch.pupdate')}}" method="post" name="new_branch" id="new_branch" enctype="multipart/form-data">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="tb_ag_id" id="tb_ag_id" value="{{Model.id}}">

                    <div class="form-group">
                        {{flashMsg()}}
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ag_code" class="col-lg-12 m-b-10">{{LexiqueGetString('code')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_ag_code" name="tb_ag_code" class="form-control b-r-sm" type="text" maxlength="10" placeholder="{{LexiqueGetString('code')}}*" value="{{Model.code}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_code}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="tb_ag_label">{{LexiqueGetString('branch-name')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_ag_label" name="tb_ag_label" class="form-control b-r-sm" type="text" maxlength="50" placeholder="{{LexiqueGetString('branch-name')}}" value="{{Model.label}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_label}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_ag_country">{{LexiqueGetString('country')}}</label>
                            <div class="col-lg-12">
                                <select id="tb_ag_country" name="tb_ag_country" class="form-control b-r-sm">
                                    {{countries|raw}}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_cty_region">{{LexiqueGetString('region')}}</label>
                            <div class="col-lg-12">
                                <select id="tb_cty_region" name="tb_cty_region" class="form-control b-r-sm">
                                    {{regions|raw}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_ag_city">{{LexiqueGetString('city')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <select id="tb_ag_city" name="tb_ag_city" class="form-control b-r-sm" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                    {{cities|raw}}
                                </select>
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_city}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_ag_entrep">{{LexiqueGetString('enterprise')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <select id="tb_ag_entrep" name="tb_ag_entrep" class="form-control b-r-sm" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                    {{entreprises|raw}}
                                </select>
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_entrep}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ag_phone_1" class="col-lg-12 m-b-10">{{LexiqueGetString('phone')}} 1</label>
                            <div class="col-lg-12">
                                <input id="tb_ag_phone_1" name="tb_ag_phone_1" class="form-control b-r-sm" type="text" maxlength="20" placeholder="{{LexiqueGetString('phone')}} 1" value="{{Model.phone1}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_phone_1}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="tb_ag_phone_2" class="col-lg-12 m-b-10">{{LexiqueGetString('phone')}} 2</label>
                            <div class="col-lg-12">
                                <input id="tb_ag_phone_2" name="tb_ag_phone_2" class="form-control b-r-sm" type="text" maxlength="20" placeholder="{{LexiqueGetString('phone')}} 2" value="{{Model.phone2}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_phone_2}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ag_email" class="col-lg-12 m-b-10">{{LexiqueGetString('e-mail')}} 1</label>
                            <div class="col-lg-12">
                                <input id="tb_ag_email" name="tb_ag_email" class="form-control b-r-sm" type="email" maxlength="50" placeholder="{{LexiqueGetString('e-mail')}}" value="{{Model.email}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_email}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="tb_ag_address">{{LexiqueGetString('address')}}</label>
                            <div class="col-lg-12">
                                <textarea id="tb_ag_address" name="tb_ag_address" class="form-control b-r-sm" maxlength="255" placeholder="{{LexiqueGetString('address')}}">{{Model.address}}</textarea>
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_address}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-6 form-label m-b-10">{{LexiqueGetString('number-of-teller')}}</label>
                            <div class="col-lg-4">
                                <input type="text" value="{{Model.nbCaisse}}" class="dial m-r-sm" name="tb_ag_nb_caisse" id="tb_ag_nb_caisse" data-fgColor="#1AB394" data-width="85" data-height="85" data-min="1" data-max="8" data-cursor=true data-thickness=.3 data-angleOffset=-125 data-angleArc=250
                                />
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ag_nb_caisse}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <hr class="hr-line-dashed">
                        </div>
                        <div class="col-lg-12"><label class="text-right m-l-lg"><code>*</code> <small>{{LexiqueGetString('required-fields')}}</small></label></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-12 mb-20">
                            {{goBack('branch.read')}}
                        </div>
                        <div class="col-lg-6 col-lg-12">
                            <button type="submit" id="sendComplaint" class="btn btn-md btn-primary g-bg-primary-opacity-0_8--hover g-mr-10 pull-right">
                                {{LexiqueGetString('save')}}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock content %} {% block scripts %}
<script src="{{ base_url() }}/js/plugins/validate/jquery.validate.min.js"></script>
<script src="{{ base_url() }}/js/plugins/jsKnob/jquery.knob.js"></script>
<script>
    $(document).ready(function() {

        $('#new_branch').validate({
            rules: {
                tb_ag_code: {
                    required: true,
                    maxlength: 10
                },
                tb_ag_label: {
                    required: true,
                    maxlength: 155
                },
                tb_ag_city: {
                    required: true
                },
                tb_ag_entrep: {
                    required: true
                },
                tb_ag_address: {
                    maxlength: 255
                },
                tb_ag_phone_1: {
                    maxlength: 20
                },
                tb_ag_phone_2: {
                    maxlength: 20
                },
                tb_ag_email: {
                    maxlength: 50,
                    email: true
                }
            },
            messages: {
                tb_ag_code: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ag_label: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ag_city: {
                    required: "{{LexiqueGetString('this-field-is-required')}}"
                },
                tb_ag_entrep: {
                    required: "{{LexiqueGetString('this-field-is-required')}}"
                },
                tb_ag_address: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ag_phone_1: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ag_phone_2: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ag_email: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}"),
                    email: jQuery.validator.format("{{LexiqueGetString('invalid-e-mail-address')}}")
                }
            }
        });
        $(".dial").knob();
        $('#tb_ag_country').change(function() {
            LocationChange("{{path_for('country.ddchg')}}", $(this).val(), 'tb_cty_region');
        });
        $('#tb_cty_region').change(function() {
            LocationChange("{{path_for('region.ddchg')}}", $(this).val(), 'tb_ag_city');
        });
        $('#tb_ag_city').change(function() {
            LocationChange("{{path_for('city.ddchg')}}", $(this).val(), 'tb_ag_entrep', 2);
        });
    });
</script>
{% endblock scripts %}