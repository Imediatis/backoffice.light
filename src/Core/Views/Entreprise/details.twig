{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}
<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-4">

        <div class="contact-box center-version">

            <a href="#">

                <img alt="Avatar" class="img-circle" src="{{base_url()}}/img/avatars/company.svg">
                <h3 class="m-b-xs"><strong>{{Model.name}}</strong></h3>
                <div class="font-bold">{{LexiqueGetString('created-on')}} {{Model.createdOn}}</div>
                <div><small class="Phone">{{LexiqueGetString('domain-name')}} : </small>{{Model.domain}}</div>
                <address class="m-t-md text-left">
                    {{LexiqueGetString('reference')}} : <strong>{{Model.ref}}</strong><br>
                    {{Model.address}}<br>
                    <abbr title="Phone"><i class="fa fa-phone"></i></abbr> {{Model.phone1}} <br>
                    <abbr title="Phone"><i class="fa fa-phone"></i></abbr> {{Model.phone2}} <br>
                    <abbr><i class="fa fa-envelope"></i></abbr> {{Model.email1}} <br>
                    <abbr><i class="fa fa-envelope"></i></abbr> {{Model.email2}} <br>
                </address>

            </a>
            <div class="contact-box-footer">
                <div class="m-t-xs btn-group">
                    <a class="btn btn-xs btn-white" href="tel:{{Model.phone1}}"><i class="fa fa-phone"></i> Call </a>
                    <a class="btn btn-xs btn-white" href="mailto:{{Model.email1}}"><i class="fa fa-envelope"></i> Email</a>
                    <a class="btn btn-xs btn-white" href="{{path_for('entreprise.update',{'code':Model.ref|base64_encode})}}" data-toggle="tooltip" data-placement="top" title="{{LexiqueGetString('update')}}"><i class="fa fa-pencil"></i> {{LexiqueGetString('update')}}</a>
                </div>
            </div>

        </div>
        <div class="col-lg-6 mb-20">
            {{goBack('entreprise.read')}}
        </div>
    </div>
    <div class="col-lg-4">
        <div class="ibox">
            <div class="ibox-title">
                <h5>{{LexiqueGetString('last-realisations')}}</h5>
            </div>
            <div class="ibox-content">
                <small>Sales in last 24h</small>
                <h2 class="no-margins">206 480</h2>
                <div id="sparkline1"></div>
            </div>

        </div>
    </div>
    <div class="col-lg-4">

    </div>
</div>

{% endblock content %} {% block scripts %}
<script src="{{base_url()}}/js/plugins/sparkline/jquery.sparkline.min.js"></script>
<script>
    $(document).ready(function() {
        $("#sparkline1").sparkline([34, 43, 43, 35, 44, 32, 44, 48], {
            type: 'line',
            width: '100%',
            height: '50',
            lineColor: '#1ab394',
            fillColor: "transparent"
        });
    });
</script>
{% endblock scripts %}