{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}
<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-offset-2 col-lg-7">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><i class="fa fa-user m-r-sm"></i>{{LexiqueGetString('new-enterprise')}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" action="{{path_for('entreprise.pcreate')}}" method="post" name="new_entreprise" id="new_entreprise" enctype="multipart/form-data">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="tb_ent_id" id="tb_ent_id" value="{{Model.id}}">

                    <div class="form-group">
                        {{flashMsg()}}
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ent_ref" class="col-lg-12 m-b-10">{{LexiqueGetString('reference')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_ent_ref" name="tb_ent_ref" class="form-control b-r-sm" type="text" maxlength="20" placeholder="{{LexiqueGetString('reference')}}*" value="{{Model.reference}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_ref}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="tb_ent_domain_name">{{LexiqueGetString('domain-name')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_ent_domain_name" name="tb_ent_domain_name" class="form-control b-r-sm" type="text" maxlength="50" placeholder="{{LexiqueGetString('domain-name')}}" value="{{Model.domain}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_domain_name}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label for="tb_ent_name" class="col-lg-12 m-b-10">{{LexiqueGetString('name')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input id="tb_ent_name" name="tb_ent_name" class="form-control b-r-sm" type="text" maxlength="120" placeholder="{{LexiqueGetString('name')}}*" value="{{Model.name}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_name}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_ent_country">{{LexiqueGetString('country')}}</label>
                            <div class="col-lg-12">
                                <select id="tb_ent_country" name="tb_ent_country" class="form-control b-r-sm">
                                    {{countries|raw}}
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_cty_region">{{LexiqueGetString('region')}}</label>
                            <div class="col-lg-12">
                                <select id="tb_cty_region" name="tb_cty_region" class="form-control b-r-sm">
                                    {{regions|raw}}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 mb-10" for="tb_ent_city">{{LexiqueGetString('city')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <select id="tb_ent_city" name="tb_ent_city" class="form-control b-r-sm" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                    {{cities|raw}}
                                </select>
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_city}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 form-label m-b-10" for="tb_ent_address">{{LexiqueGetString('label')}}</label>
                            <div class="col-lg-12">
                                <textarea id="tb_ent_address" name="tb_ent_address" class="form-control b-r-sm" maxlength="255" placeholder="{{LexiqueGetString('address')}}">{{Model.address}}</textarea>
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_address}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ent_phone1" class="col-lg-12 m-b-10">{{LexiqueGetString('phone')}} 1</label>
                            <div class="col-lg-12">
                                <input id="tb_ent_phone1" name="tb_ent_phone1" class="form-control b-r-sm" type="text" maxlength="20" placeholder="{{LexiqueGetString('phone')}} 1" value="{{Model.phone1}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_phone1}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="tb_ent_phone2" class="col-lg-12 m-b-10">{{LexiqueGetString('phone')}} 2</label>
                            <div class="col-lg-12">
                                <input id="tb_ent_phone2" name="tb_ent_phone2" class="form-control b-r-sm" type="text" maxlength="20" placeholder="{{LexiqueGetString('phone')}} 2" value="{{Model.phone2}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_phone2}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label for="tb_ent_email_1" class="col-lg-12 m-b-10">{{LexiqueGetString('e-mail')}} 1</label>
                            <div class="col-lg-12">
                                <input id="tb_ent_email_1" name="tb_ent_email_1" class="form-control b-r-sm" type="email" maxlength="80" placeholder="{{LexiqueGetString('e-mail')}} 1" value="{{Model.email1}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_email_1}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label for="tb_ent_email_2" class="col-lg-12 m-b-10">{{LexiqueGetString('e-mail')}} 2</label>
                            <div class="col-lg-12">
                                <input id="tb_ent_email_2" name="tb_ent_email_2" class="form-control b-r-sm" type="email" maxlength="80" placeholder="{{LexiqueGetString('e-mail')}} 2" value="{{Model.email2}}">
                                <span class="help-block m-b-none text-danger">{{modelErrors.tb_ent_email_2}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <hr class="hr-line-dashed">
                        </div>
                        <div class="col-lg-12"><label class="text-right m-l-lg"><code>*</code> <small>{{LexiqueGetString('required-fields')}}</small></label></div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-12 mb-20">
                            {{goBack('entreprise.read')}}
                        </div>
                        <div class="col-lg-6 col-lg-12">
                            <button type="submit" id="sendComplaint" class="btn btn-md btn-primary g-bg-primary-opacity-0_8--hover g-mr-10 pull-right">
                                {{LexiqueGetString('save')}}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
{% endblock content %} {% block scripts %}
<script src="{{ base_url() }}/js/plugins/validate/jquery.validate.min.js"></script>
<script>
    $(document).ready(function() {

        $('#new_entreprise').validate({
            rules: {
                tb_ent_ref: {
                    required: true,
                    maxlength: 20
                },
                tb_ent_domain_name: {
                    required: true,
                    maxlength: 50
                },
                tb_ent_name: {
                    required: true,
                    maxlength: 128
                },
                tb_ent_city: {
                    required: true
                },
                tb_ent_address: {
                    maxlength: 255
                },
                tb_ent_phone1: {
                    maxlength: 20
                },
                tb_ent_phone2: {
                    maxlength: 20
                },
                tb_ent_email_1: {
                    maxlength: 80,
                    email: true
                },
                tb_ent_email_2: {
                    maxlength: 80,
                    email: true
                }
            },
            messages: {
                tb_ent_ref: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_domain_name: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_name: {
                    required: "{{LexiqueGetString('this-field-is-required')}}",
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_city: {
                    required: "{{LexiqueGetString('this-field-is-required')}}"
                },
                tb_ent_address: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_phone1: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_phone2: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}")
                },
                tb_ent_email_1: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}"),
                    email: jQuery.validator.format("{{LexiqueGetString('invalid-e-mail-address')}}")
                },
                tb_ent_email_2: {
                    maxlength: jQuery.validator.format("{{LexiqueGetString('this-field-accept-maximum')}}"),
                    email: jQuery.validator.format("{{LexiqueGetString('invalid-e-mail-address')}}")
                }
            }
        });

        $('#tb_ent_country').change(function() {
            LocationChange("{{path_for('country.ddchg')}}", $(this).val(), 'tb_cty_region');
        });
        $('#tb_cty_region').change(function() {
            LocationChange("{{path_for('region.ddchg')}}", $(this).val(), 'tb_ent_city');
        });
    });
</script>
{% endblock scripts %}