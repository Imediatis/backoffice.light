{% extends session.coreShareViewsF ~ "layout.twig" %} {% block styles %}

<style></style>
{% endblock styles %} {% block content %}
<div class="row">
    <div class="col-lg-offset-3 col-lg-6">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5><i class="fa fa-id-badge m-r-sm"></i>{{LexiqueGetString('new-profile')}}</h5>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" action="{{path_for('profile.pcreate')}}" method="post" autocomplete="off" name="new_profile" id="new_profile" enctype="multipart/form-data">
                    {{ getCsrfInput() }}
                    <div class="form-group">
                        {{flashMsg()}}
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label class="col-lg-12 col-form-label m-b-sm" for="code">{{LexiqueGetString('code')}}<code>*</code></label>
                            <div class="col-lg-12">
                                <input type="hidden" name="prof_id" id="prof_id" value="{{Model.id}}">
                                <input id="code" name="code" class="form-control u-form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('code')}}*" value="{{Model.code}}" required data-msg-required="{{LexiqueGetString('required-fields')}}">
                                <span class="help-block">{{modelErrors.code}}</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-12 col-form-label m-b-sm" for="description">{{LexiqueGetString('description')}}</label>
                            <div class="col-lg-12">
                                <input id="description" name="description" class="form-control u-form-control b-r-sm" type="text" placeholder="{{LexiqueGetString('description')}}" value="{{Model.description}}">
                                <span class="help-block">{{modelErrors.description}}</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <hr class="hr-line-dashed">
                        </div>
                        <div class="col-lg-12"><label class="text-right m-l-lg"><code>*</code> <small>{{LexiqueGetString('required-fields')}}</small></label></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-lg-12 g-mb-20">
                            {{goBack('profile.read')}}
                        </div>
                        <div class="col-lg-6 col-lg-12">
                            <div class="loadersmall g-mr-10 g-my-15 pull-right i-disp-none" id="b_loadersmall"></div>
                            <button type="submit" id="sendComplaint" class="btn btn-md btn-primary pull-right">
                                {{LexiqueGetString('save')}}
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock content %} {% block scripts %}
<script></script>
{% endblock scripts %}